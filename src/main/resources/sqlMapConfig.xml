<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <!--配置mybatis的LOG-->
    <settings>
        <setting name="logImpl" value="LOG4J2"/>
    </settings>
    <!--给每个pojo起别名-->
    <typeAliases>
        <package name="com.tangbaobao.pojo"/>
        <package name="com.tangbaobao.vo"/>
    </typeAliases>

    <!--配置Mapper.xml和接口的映射文件-->
    <mappers>
        <package name="com.tangbaobao.dao"/>
    </mappers>
</configuration>